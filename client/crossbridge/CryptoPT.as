source, "iso-8859-1")        var out:ByteArray = sha.hash(bytes);        out.position = 0;        var outputString:String = Hex.fromString(out.readMultiByte(out.length, "iso-8859-1"), false, "iso-8859-1");    }    public function sha256CB():void {        var outputPtr:int = CModule.malloc(4);        var outputLengthPtr:int = CModule.malloc(4);        ClientLib.ext_hash(type, source, outputPtr, outputLengthPtr);        var outputLength:int = CModule.read32(outputLengthPtr);        var outputString:String = CModule.readString(CModule.read32(outputPtr), outputLength);        CModule.free(outputPtr);        CModule.free(outputLengthPtr);    }    private static function getTestText():String {        var result:String = "";        for (var i:int = 0; i < 1024 * 1024; i++) {            result += String.fromCharCode(int(Math.random() * 256));        }        return result;    }}}